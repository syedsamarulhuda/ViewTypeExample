<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.samar.viewtypeexample.ui.activity.CategoryActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/calendarHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/calClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:layout_marginTop="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="23dp"
                android:layout_marginEnd="23dp" />

            <ImageView
                android:id="@+id/ivCalTitle"
                android:layout_width="match_parent"
                android:layout_marginLeft="-65dp"
                android:layout_height="85dp"
                android:layout_below="@id/calClose"
                android:src="@drawable/select_a_delivery_da" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCalTitle"
                android:layout_marginTop="3dp"
                android:layout_gravity="bottom"
                android:src="@drawable/week" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:layout_below="@+id/calendarHeader"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/ivCalendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/all_cal" />

    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
      >

        
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Next"
            android:textColor="#FFF"
            />

    </android.support.v7.widget.CardView>
</RelativeLayout>
